{
  "private": true,
  "scripts": {
    "lint": "eslint . --fix --ignore-path .gitignore"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "husky": "^4.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "git add"
    ]
  }
}